#! /usr/bin/env bash
# Purpose: Interactive confirmation prompt for shell scripts
# Used to get user confirmation before executing potentially destructive operations
set -euo pipefail # x

y='\e[1;33m' # Yellow and Bold
r='\e[0m'    # Reset
printf "$y%s$r (y/N)" "$1"
read -r INPUT
if [ "$INPUT" == "y" ] || [ "$INPUT" == "yes" ]; then
	exit 0
fi
exit 1
