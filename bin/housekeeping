#! /usr/bin/env bash
set -euo pipefail # x

FIRST_OF_MONTH=""
day=$(date -u +%d)
if [[ "$day" -lt 10 ]]; then
	FIRST_OF_MONTH="y"
fi

if [[ "$FIRST_OF_MONTH" = "y" ]]; then
	echo "Nix last updated"
	cat ~/dotfiles/last-updated.txt

	echo "Nix last applied"
	cat ~/dotfiles/last-applied.txt
fi

check_git_status() {
	if [[ ! -d "$1" ]]; then
		return 0
	fi
	(
		cd "$1"
		git fetch
		OUTPUT=$(git status --porcelain)
		LINES=$(echo "$OUTPUT" | wc -l)
		if [[ "$LINES" -gt 1 ]]; then
			echo "$1 has changes:"
			echo "$OUTPUT"
		fi
	)
}

check_git_status "$TOOLS_DIR"
check_git_status "$PRIVATE_TOOLS_DIR"

if [[ "$WORKMACHINE" = "true" ]]; then
	exit
fi

full_backup
