#!/usr/bin/env bash
set -eo pipefail

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Add bin to PATH
PATH="$PATH:./bin"

# Check for --all flag
CHECK_ALL=false
if [[ "${1:-}" == "--all" ]]; then
	CHECK_ALL=true
fi

echo -e "${YELLOW}Running Nix linters...${NC}"

# Run the linters with auto-fix
echo "Running statix..."
statix fix .

# Deadnix is now only run during pre-commit hook

echo "Running alejandra..."
alejandra .

echo -e "${GREEN}âœ“ All files have been linted and fixed${NC}"
